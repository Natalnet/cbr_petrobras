<?xml version="1.0"?>

<launch>

  <env name="GAZEBO_MODEL_PATH" value="$(find cbr_petrobras)/arena_models/models"/>

  <!-- Start Gazebo with wg world running in (max) realtime -->
  <include file="$(find cbr_petrobras)/launch/petrobras_arena.launch"/>

  <!-- Spawn simulated quadrotor uav -->
  <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor.launch" >
    <arg name="model" value="$(find hector_quadrotor_description)/urdf/quadrotor_petrobras_depthcam.gazebo.xacro"/>
    <arg name="controllers" value="
        controller/attitude
        controller/velocity
        controller/position
        "/>
    <arg name="x" value="1.0"/>
    <arg name="y" value="0.75"/>
    <arg name="z" value="0.71"/>
  </include>

  <!-- Start rviz visualization with preset config -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find cbr_petrobras)/rviz/petrobras_rviz.rviz"/>

  <include file="$(find hector_quadrotor_teleop)/launch/xbox_controller.launch" >
    <arg name="control_mode" value="position"/>
  </include>

</launch>
